# Database Configuration for Supabase
# Copy this file to .env.local and fill in your actual values

# Supabase Database URL (for Prisma)
PRISMA_DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1&pool_timeout=30&connect_timeout=30&prepared_statements=false"

# Direct Database URL (for migrations and direct connections)
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:5432/postgres?sslmode=require"

# Azure AD Configuration
NEXT_PUBLIC_AZURE_AD_CLIENT_ID="your-azure-ad-client-id"
NEXT_PUBLIC_AZURE_AD_TENANT_ID="your-azure-ad-tenant-id"

# Admin emails (comma-separated)
NEXT_PUBLIC_ADMIN_EMAILS="admin1@example.com,admin2@example.com"

# Zoho Configuration
ZOHO_CLIENT_ID="your-zoho-client-id"
ZOHO_CLIENT_SECRET="your-zoho-client-secret"
ZOHO_REFRESH_TOKEN="your-zoho-refresh-token"
ZOHO_ORGANIZATION_ID="your-zoho-organization-id"

# Clockify Configuration
CLOCKIFY_API_KEY="your-clockify-api-key"
CLOCKIFY_WORKSPACE_ID="your-clockify-workspace-id"

# Note: Replace [project-ref] and [password] with your actual Supabase project reference and password
# The PRISMA_DATABASE_URL uses port 6543 (pooler) and includes pooling parameters
# The DIRECT_URL uses port 5432 (direct connection) for migrations
